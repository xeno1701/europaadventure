            Console.Clear()
            WrtLnCentered("Loading", 5)
            titledecor("Loading", 5)
            Threading.Thread.Sleep(500)
            Console.Clear()
        End If
        Defaultcolour()
        Console.WriteLine(starterinfo)
        LookAround()
        highlightcol()
        Console.WriteLine("Press ENTER to start and then type a COMMAND.")

    Public Sub OpeningTitle(splash As Boolean)
        Console.Clear()
        Dim chance As Single
        Randomize()
        chance = Int(10 * Rnd() + 1)
        Dim tempreplacer As String
        If chance = 5 Or chance = 2 Then
            tempreplacer = startmessagefunny
        Else
            tempreplacer = startmessage
        End If
        ' ^^ spaceman cameo for last letter a, only 1 in 5 chance
        If splash = True Then
            Console.WriteLine(tempreplacer)
            Console.SetCursorPosition(0, 0)
            Threading.Thread.Sleep(2000)
            Console.Clear()
            Threading.Thread.Sleep(400)
            WrtLnCentered("'Escapade On Europa', By Xeno1701 // Dagan Harris", 5)
            titledecor("'Escapade On Europa', By Xeno1701 // Dagan Harris", 5)
